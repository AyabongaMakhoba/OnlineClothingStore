@model IEnumerable<OnlineWebApp.Models.Request>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Colour.Colour_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shirt.ShirtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size.mysize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Colour.Colour_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Shirt.ShirtName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Size.mysize)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.quantity)
    </td>
    <td>
        @if (item.Picture != null)
        {
            var base64 = Convert.ToBase64String(item.Picture);
            var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
            <img src="@ImgSource" width="250" height="250" />
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RequestId }) |
        @Html.ActionLink("Details", "Details", new { id = item.RequestId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RequestId })
    </td>
</tr>
}

</table>
