@model IEnumerable<OnlineWebApp.Models.Items>

@{
    ViewBag.Title = "Sales";
}

<h2>View Sales</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">

    <tr>
        <th>
            Brand
        </th>
        <th>
            Category
        </th>
        <th>
            Sale
        </th>
        <th>
            Tag
        </th>
        <th>
            Front
        </th>
        @*<th>
            Left
        </th>
        <th>
            Right
        </th>*@
        <th>
            Name
        </th>
        <th>
            Cost
        </th>
        @*<th>
            In Stock
        </th>*@
        <th>
            Sold
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Tag_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.Category_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sales.Sale_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag.Tag_Name)
            </td>
            <td>
                @if (item.Front_View != null)
                {
                    var base64 = Convert.ToBase64String(item.Front_View);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@ImgSource" width="250" height="250" />
                }
            </td>
            @*<td>
                @if (item.Left_View != null)
                {
                    var base64 = Convert.ToBase64String(item.Left_View);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@ImgSource" width="250" height="250" />
                }
            </td>
            <td>
                @if (item.Rght_View != null)
                {
                    var base64 = Convert.ToBase64String(item.Rght_View);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@ImgSource" width="250" height="250" />
                }
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemCost)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.QuantityOnHand)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TimesBought)
            </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Item_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Item_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Item_Id })
        </td>
    </tr>
}

</table>
